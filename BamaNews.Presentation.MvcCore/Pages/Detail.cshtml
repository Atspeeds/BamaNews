@page
@model BamaNews.Presentation.MvcCore.Pages.DetailModel
@{
    Layout = "_TitleBar";
}




<div class="site">

    <div id="main" style="margin-bottom: 466.172px;">
        <div class="section pt-10 pb-10">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4">
                        <div class="sidebar">
                            <div class="widget widget-search">
                                <form class="search-form" action="#">
                                    <input type="search" class="search-field" placeholder="جستجوی کلید واژه..." value="" name="s" title="جستجو برای:">
                                    <button type="submit" class="search-submit">
                                        <span class="search-btn-icon fa fa-search"></span>
                                        <span class="search-btn-text">جستجو</span>
                                    </button>
                                </form>
                            </div>
                            <div class="widget widget_categories">
                                <ul>
                                    <li class="cat-item"><a href="#">کسب و کار <span class="count">2</span></a></li>
                                    <li class="cat-item"><a href="#">طراحی <span class="count">1</span></a></li>
                                    <li class="cat-item"><a href="#">مد روز <span class="count">3</span></a></li>
                                    <li class="cat-item"><a href="#">جشنواره ها <span class="count">1</span></a></li>
                                    <li class="cat-item"><a href="#">سبک زندگی <span class="count">4</span></a></li>
                                    <li class="cat-item"><a href="#">عکاسی <span class="count">2</span></a></li>
                                    <li class="cat-item"><a href="#">سفر <span class="count">4</span></a></li>
                                    <li class="cat-item"><a href="#">ویدئو <span class="count">4</span></a></li>
                                </ul>
                            </div>
                            <div class="widget posts-widget">
                                <h2 class="widget-title">پست های محبوب</h2>
                                <div class="posts-widget-wrapper">
                                    <div class="post-item">
                                        <div class="post-widget-info">
                                            <div class="post-widget-categories">
                                                <a href="blog-detail.html">ویدئو</a>
                                            </div>
                                            <h5 class="post-widget-title">
                                                <a href="blog-detail.html">پوشش شاد توسط پادشاهان جاده</a>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="post-item">
                                        <div class="post-widget-info">
                                            <div class="post-widget-categories">
                                                <a href="blog-detail.html">ویدئو</a>
                                            </div>
                                            <h5 class="post-widget-title">
                                                <a href="blog-detail.html">پوشش شاد توسط پادشاهان جاده</a>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="post-item">
                                        <div class="post-widget-info">
                                            <div class="post-widget-categories">
                                                <a href="blog-detail.html">ویدئو</a>
                                            </div>
                                            <h5 class="post-widget-title">
                                                <a href="blog-detail.html">پوشش شاد توسط پادشاهان جاده</a>
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="post-item">
                                        <div class="post-widget-info">
                                            <div class="post-widget-categories">
                                                <a href="blog-detail.html">ویدئو</a>
                                            </div>
                                            <h5 class="post-widget-title">
                                                <a href="blog-detail.html">پوشش شاد توسط پادشاهان جاده</a>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="widget_text widget">
                                <div class="textwidget mt-3">
                                    <img src="images/blog-advertising.jpg" alt="Blog Advertising">
                                </div>
                            </div>
                            <div class="widget widget_tag_cloud">
                                <div class="tagcloud">
                                    <a href="#">تبلیغات</a>
                                    <a href="#">کلاسیک</a>
                                    <a href="#">اسلایدر عرض کامل</a>
                                    <a href="#">گالری</a>
                                    <a href="#">لینک</a>
                                    <a href="#">مجله</a>
                                    <a href="#">موزیک</a>
                                    <a href="#">نقل قول</a>
                                    <a href="#">تکنو</a>
                                    <a href="#">ویدئو</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="single-post">
                            <div class="post-feature post-thumbnail">
                                <img src="images/blog/@(Model.NewsModel.Image)" alt="">
                            </div>
                            <div class="entry-header">
                                <div class="post-categories">
                                    <a href="#">@Model.NewsModel.NewsCategory</a>
                                </div>
                                <h1 class="entry-title">@Model.NewsModel.Title</h1>
                                <div class="post-meta">
                                    <div class="post-author-meta">
                                        <i class="ion-ios-person"></i>
                                        <a href="#">ارش خادملو</a>
                                    </div>
                                    <div class="post-view">
                                        <i class="ion-eye"></i>
                                        116 بازدید
                                    </div>
                                    <div class="post-likes meta-item">
                                        <i class="ion-android-favorite-outline"></i>
                                        1 لایک
                                    </div>
                                    <div class="post-date">
                                        <i class="ion-android-alarm-clock"></i>
                                        @Model.NewsModel.CreationDate
                                    </div>
                                </div>
                            </div>
                            <div class="entry-content">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <p>@Model.NewsModel.ShortDescription</p>
                                        <div class="mb-5"></div>
                                    </div>
                                    <div class="col-lg-12">
                                        <h5 class="heading fz-20 mt-2 mb-2"> با داده ها چه کار می کنید؟</h5>
                                        <p>@Model.NewsModel.Content</p>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="entry-footer">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="post-tags">
                                            <i class="ion-ios-pricetags"></i>
                                            <a href="#">تبلیغات</a>, <a href="#">کلاسیک</a>, <a href="#">تکنولوژی</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="post-share">
                                            <div class="post-share-title">به اشتراک گذاشتن این پست&nbsp;&nbsp;</div>
                                            <div class="post-share">
                                                <div class="post-share-toggle">
                                                    <span class="ion-android-share-alt"></span>
                                                    <div class="post-share-list">
                                                        <a class="hint--bounce hint--top facebook" target="_blank" aria-label="فیسبوک" href="#">
                                                            <i class="ion-social-facebook"></i>
                                                        </a>
                                                        <a class="hint--bounce hint--top twitter" target="_blank" aria-label="توییتر" href="#">
                                                            <i class="ion-social-twitter"></i>
                                                        </a>
                                                        <a class="hint--bounce hint--top google-plus" target="_blank" aria-label="گوگل+" href="#">
                                                            <i class="ion-social-googleplus"></i>
                                                        </a>
                                                        <a class="hint--bounce hint--top tumblr" target="_blank" aria-label="تامبلر" href="#">
                                                            <i class="ion-social-tumblr"></i>
                                                        </a>
                                                        <a class="hint--bounce hint--top linkedin" target="_blank" aria-label="لینکداین" href="#">
                                                            <i class="ion-social-linkedin"></i>
                                                        </a>
                                                        <a class="hint--bounce hint--top email" target="_blank" aria-label="ایمیل" href="#">
                                                            <i class="ion-android-mail"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="entry-author">
                                <div class="author-info">
                                    <div class="author-avatar">
                                        <img alt="" src="images/avatar/avatar_2.jpg" class="avatar" height="90" width="90">
                                    </div>
                                    <div class="author-description">
                                        <h5 class="author-name">ارش خادملو</h5>
                                        <div class="author-biographical-info">
                                            ارش خادملو نویسنده، وبلاگنویس و طراح زندگی در حومه واشنگتن دی سی است. هنگامی که او طراحی، وبلاگ نویسی یا نوشتن نمی کند، اوون می تواند با سر او در یک کتاب پیدا شود یا مانند یک دیوانه.
                                        </div>
                                    </div>
                                </div>
                                <div class="author-social-networks">
                                    <a class="hint--bounce hint--top" aria-label="فیسبوک" href="#" target="_blank">
                                        <i class="ion-social-facebook"></i>
                                    </a>
                                    <a class="hint--bounce hint--top" aria-label="توییتر" href="#" target="_blank">
                                        <i class="ion-social-twitter"></i>
                                    </a>
                                    <a class="hint--bounce hint--top" aria-label="گوگل+" href="#" target="_blank">
                                        <i class="ion-social-googleplus"></i>
                                    </a>
                                    <a class="hint--bounce hint--top" aria-label="اینستاگرام" href="#" target="_blank">
                                        <i class="ion-social-instagram-outline"></i>
                                    </a>
                                </div>
                            </div>
                            <nav class="navigation post-navigation">
                                <a href="#" class="return-blog-page"><i class="ion-grid"></i></a>
                                <div class="nav-links">
                                    <div class="previous nav-item">
                                        <div class="nav-previous">
                                            <a href="#">صبحانه در سرخ</a>
                                        </div>
                                    </div>
                                    <div class="next nav-item">
                                        <div class="nav-next">
                                            <a href="#">شب شنبه</a>
                                        </div>
                                    </div>
                                </div>
                            </nav>

                            <div id="comments" class="comments-area">
                                <h2 class="comments-title">
                                    نظرات <span class="comment-count">(3)</span>
                                </h2>

                                <!-- Show #Comment -->
                                @await Component.InvokeAsync("CommentNews", Model.NewsModel.Id)
                                <!-- End Show #Comment -->

                                <div class="comment-form-wrap">
                                    <div id="respond" class="comment-respond">
                                        <h3 class="comment-reply-title">نظر خود را اینجا بنویسید</h3>
                                        <form class="comment-form" method="post" asp-page-handler="Comment">
                                            <div class="comment-form-wrapper">
                                                <div class="left-form">
                                                    <div class="comment-form-email">
                                                        <input name="NewsId" type="hidden" value="@Model.NewsModel.Id">
                                                    </div>
                                                    <div class="comment-form-url">
                                                        <input placeholder="موضوع" name="Title" type="text" size="30">
                                                    </div>
                                                </div>
                                                <div class="right-form">
                                                    <div class="comment-form-comment">
                                                        <textarea placeholder="نظر شما" name="Message"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-submit">
                                                <input name="submit" type="submit" id="submit" class="submit button style-flat" value="تایید">
                                            </div>
                                        </form>
                                    </div><!-- #respond -->
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<a id="backtotop" class="fa fa-angle-up circle" href="javascript:void(0)"></a>




