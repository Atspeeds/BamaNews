@page
@model BamaNews.Presentation.MvcCore.Pages.UserModel
@{
    Layout = "_TitleBar";
}

@if (!User.Identity.IsAuthenticated)
{
        <div id="main" style="margin-bottom: 466.172px;">
            <div class="section pt-10 pb-10">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12">
                            <h2>ورود</h2>
                            <form class="commerce-form-login" method="post" asp-page-handler="Login">
                                <div class="form-item">
                                    <label for="username">نام کاربری یا آدرس ایمیل <span class="required">*</span></label>
                                    <input type="text" class="form-text" name="UserName">
                                </div>
                                <div class="form-item">
                                    <label for="password">رمزعبور <span class="required">*</span></label>
                                    <input class="form-text" type="password" name="Password">
                                </div>
                                <div class="form-item">
                                    <button type="submit" class="button style-flat">ورود</button>
                                    <input class="form-checkbox" name="RememberMe" type="checkbox"> <span>مرا به خاطر بسپار</span>
                                </div>
                                <div class="form-item">
                                    <a href="#">رمز عبور خود را فراموش کرده اید؟</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
}




