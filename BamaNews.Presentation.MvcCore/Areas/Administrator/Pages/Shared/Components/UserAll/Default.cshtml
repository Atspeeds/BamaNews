                            <th>تاریخ ثبت نام</th>
                            <th>درجه کاربر</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@item.UserId</td>
                            <td>@item.UserName</td>
                            <td>@item.Email</td>
                            <td>@item.Passwoard</td>
                            <td>@item.UserRole</td>
                            <td>@item.CreationDate</td>
                            <td>@item.IsAdmin</td>
                        </tr>
                        }
                      
                    </tbody>
                </table>
            </div>

        </div>
